<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="yonky.yiqikotlin">

    <!-- SD 卡读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".v.SplashActivity"
                  android:windowSoftInputMode="stateUnchanged|adjustPan"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".v.MainActivity"
            />
        <activity android:name=".v.GoodsActivity"/>
        <activity android:name=".v.GoodDetailActivity"/>
        <activity android:name=".v.ActivityFragment"/>
    </application>

</manifest>
